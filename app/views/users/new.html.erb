<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #ffc0cb;">
    <a class="navbar-brand">The Gossip Project</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
        <a class="nav-link" href="/gossips">Accueil</a>
        </li>
        <li class="nav-item">
          <%= link_to "La Team", team_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact", contact_path, class:"nav-link" %>
        </li>
      </ul>
    </div>
    <div class="nav-item d-flex flex-row-reverse">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "S'inscrire", new_user_path, class:"nav-link" %>
        </li>
      </ul>
    </div>
  </nav>
</header>

  <h1>Inscription nouvel utilisateur</h1>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <label> Ton prénom</label>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label> Ton nom</label>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag 'Ta ville'%>
      <%= select_tag "city", options_from_collection_for_select(City.all, :id, :name), {class: 'form-control', prompt: 'Choisir une ville'} %>
    </div>
    <div class="form-group">
      <label> Adresse e-mail</label>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label> Mot de passe</label>
      <%= f.text_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
    <button type="submit" class="btn" style="background-color: #ffc0cb">Créer son profil</button>
    </div>
  <% end %>
</div>

